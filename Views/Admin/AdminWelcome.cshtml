
@{
    ViewBag.Title = "adminwelcome";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">

                    @if (Session["emailid"] != null)
                    {
                        <h2 class="text-center">welcome @Session["emailid"].ToString()</h2>
                        <div class="text-center">
                            <img src="@Html.ViewData["Img"]" alt="image" height="150" width="150" />


                            <h3 class="card-title">User Details:</h3>
                            <table style="margin: 0 auto;">
                                <tr>
                                    <th>First Name:</th>
                                    <td>@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <th>Last Name:</th>
                                    <td>@Model.LastName</td>
                                </tr>
                                <tr>
                                    <th>Date of Birth:</th>
                                    <td>@Model.DateOfBirth.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th>Gender:</th>
                                    <td>@Model.Gender</td>
                                </tr>
                                <tr>
                                    <th>Phone Number:</th>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                                <tr>
                                    <th>Email Address:</th>
                                    <td>@Model.EmailAddress</td>
                                </tr>
                                <tr>
                                    <th>Country:</th>
                                    <td>@Model.Country</td>
                                </tr>
                                <tr>
                                    <th>State:</th>
                                    <td>@Model.State</td>
                                </tr>
                                <tr>
                                    <th>City:</th>
                                    <td>@Model.City</td>
                                </tr>
                                <tr>
                                    <th>Postcode:</th>
                                    <td>@Model.Postcode</td>
                                </tr>
                                <tr>
                                    <th>PassportNumber:</th>
                                    <td>@Model.PassportNumber</td>
                                </tr>
                                <tr>
                                    <th>AdharNumber</th>
                                    <td>@Model.AdharNumber</td>
                                </tr>
                                <tr>
                                    <th>Username:</th>
                                    <td>@Model.Username</td>
                                </tr>
                               
                            </table>
                        </div>
                    }


                    <div class="text-center">

                        <h3>Update Profile Image</h3>
                        <hr />
                        @using (Html.BeginForm("AdminImageChange", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="d-flex align-items-center text-center">
                                <input type="file" name="file" />
                                <br />
                                <input type="submit" value="Update Image" />
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
         function preventBack() {
                window.history.forward();
            }
            setTimeout("preventBack()", 0);
            window.onunload = function () { null };
</script> 